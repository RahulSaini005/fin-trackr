<% layout('layout') -%>

<style>
  body {
    font-family: 'Segoe UI', sans-serif;
    background-color: #f4f6f8;
    margin: 0;
    padding: 0;
  }

  .main-wrapper {
    padding: 30px 40px;
  }

  /* ðŸ”¹ Cards & Pie Chart */
  .chart-summary-wrapper {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: 20px;
    margin-bottom: 50px;
  }

  .card-container {
    display: flex;
    flex-direction: column;
    gap: 20px;
    flex: 1;
  }

  .card-container div {
    background-color: #ffffff;
    padding: 20px;
    border-left: 6px solid #4f46e5;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    font-weight: bold;
    font-size: 18px;
    border-radius: 10px;
  }

  .income {
    border-left-color: #22c55e;
  }

  .expense {
    border-left-color: #ef4444;
  }

  .savings {
    border-left-color: #3b82f6;
  }

  .chart {
    flex: 1;
    background-color: #ffffff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    text-align: center;
  }

  .chart canvas {
    max-width: 100%;
  }

  /* ðŸ”¹ Line Chart Section */
  .chartline {
    background-color: #ffffff;
    padding: 30px 20px;
    border-radius: 10px;
    margin-bottom: 30px;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
  }

  .chartline h2 {
    text-align: center;
    margin-bottom: 30px;
  }

  .date-filter-container {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    margin-bottom: 30px;
    flex-wrap: wrap;
  }

  .date-label {
    font-weight: 600;
    font-size: 16px;
  }

  .date-input {
    padding: 8px;
    margin-left: 5px;
    border-radius: 6px;
    border: 1px solid #ccc;
  }

  .apply-btn {
    padding: 10px 20px;
    border: none;
    border-radius: 6px;
    background-color: #4f46e5;
    color: white;
    font-weight: bold;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .apply-btn:hover {
    background-color: #3730a3;
  }
</style>

<div class="main-wrapper">
  <!-- ðŸ”· Pie Chart + Summary Cards -->
  <div class="chart-summary-wrapper">
    <!-- Summary Cards -->
    <div class="card-container">
      <div class="income">Income: â‚¹<span id="incomeVal">0</span></div>
      <div class="expense">Expense: â‚¹<span id="expenseVal">0</span></div>
      <div class="savings">Savings: â‚¹<span id="savingsVal">0</span></div>
    </div>

    <!-- Pie Chart -->
    <div class="chart">
      <h2>Income Analytics</h2>
      <canvas id="pieChart"></canvas>
    </div>
  </div>

  <!-- ðŸ”· Line Chart -->
  <div class="chartline">
    <h2>ðŸ“ˆ Income & Expense Trend</h2>

    <div class="date-filter-container">
      <label class="date-label">
        From:
        <input type="date" id="fromDate" class="date-input">
      </label>

      <label class="date-label">
        To:
        <input type="date" id="toDate" class="date-input">
      </label>

      <button onclick="filterChartByDate()" class="apply-btn">ðŸŽ¯ Apply</button>
    </div>

    <div style="width: 90%; max-width: 700px; margin: 0 auto;">
      <canvas id="lineChart"></canvas>
    </div>
  </div>
</div>
