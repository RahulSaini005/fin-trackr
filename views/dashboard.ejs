<% layout('layout') -%>

<!-- Welcome Section -->
<div class="main-section"></div>
<div class="box">
  <h2 class="name">Welcome, <%= userName %>!</h2>
  <div class="day" id="day"></div>
</div>

<!-- Cards Section -->
<div class="card-container">
  <div class="card income">
    <h3>Income</h3>
    <p>₹<%= totalIncome %></p>
  </div>
  <div class="card expense">
    <h3>Expense</h3>
    <p>₹<%= totalExpense %></p>
  </div>
  <div class="card balance">
    <h3>Balance</h3>
    <p>₹<%= totalBalance %></p>
  </div>
</div>

<!-- PIE CHART SECTION (Updated + Fixed) -->
<div class="chart">
  <h2 style="text-align: center; margin-top: 40px;">Income Analytics</h2>
  <div class="chart-canvas-wrapper"> <!-- ✅ Added for layout -->
    <canvas id="financeChart"></canvas>
  </div>
</div>

<!-- LINE GRAPH -->
<div class="chartline">
  <h2 style="text-align: center;">Financial Progress</h2>
  <canvas id="lineChart"></canvas>
</div>

<!-- STYLES -->
<style>
/* ==== BASE STYLING ==== */
body {
  margin: 0;
  padding: 0;
  font-family: 'Poppins', 'Segoe UI', sans-serif;
  background: linear-gradient(to right top, #f0f4f8, #d9e2ec);
  color: #1e293b;
  min-height: 100vh;
  overflow-x: hidden;
  overflow-y: auto;
}

.main-section {
  height: 20px;
}

.box {
  text-align: center;
  margin-bottom: 10px;
}

.name {
  font-size: 2rem;
  font-weight: 600;
  color: #1e293b;
}

.day {
  font-size: 1.2rem;
  color: #475569;
}

/* ==== CARD CONTAINER ==== */
.card-container {
  display: flex;
  justify-content: center;
  gap: 20px;
  margin-top: 20px;
  margin-bottom: 40px;
}

.card {
  background-color: #ffffff;
  padding: 20px 30px;
  border-radius: 12px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  text-align: center;
  min-width: 160px;
}

.card h3 {
  margin: 0;
  font-size: 1.2rem;
  color: #1e293b;
}

.card p {
  margin: 5px 0 0;
  font-size: 1.5rem;
  font-weight: bold;
}

.income {
  border-left: 6px solid #22c55e;
}

.expense {
  border-left: 6px solid #ef4444;
}

.balance {
  border-left: 6px solid #3b82f6;
}

/* ==== PIE CHART FIXED ==== */
.chart {
  width: 100%;
  max-width: 500px;
  margin: 0 auto;
  padding: 20px;
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.chart h2 {
  text-align: center;
  font-size: 1.5rem;
  margin-bottom: 1rem;
}

.chart-canvas-wrapper {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

#financeChart {
  max-width: 100%;
  height: auto;
}

/* ==== LINE CHART ==== */
.chartline {
  margin: 40px auto;
  width: 90%;
  max-width: 900px;
}

.chartline h2 {
  text-align: center;
  margin-bottom: 20px;
}

/* ==== MEDIA QUERIES ==== */
@media screen and (max-width: 768px) {
  .card-container {
    flex-direction: column;
    align-items: center;
    width: 100%;
    top: 0;
    margin-top: 20px;
  }

  .card-container > div {
    width: 90%;
    text-align: center;
  }

  .chart {
    position: static;
    width: 100%;
    padding: 0 10px 20px 10px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .chart h2 {
    font-size: 1.2rem;
    margin-top: 12px;
    margin-bottom: 10px;
    text-align: center;
  }

  #financeChart {
    width: 100% !important;
    height: auto !important;
  }

  .chartline {
    position: static;
    margin-top: 10px;
    margin-bottom: 20px;
  }
}
</style>
